{
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["lib/browser-polyfill.min.js", "content_scripts/luxon.min.js", "content_scripts/redact.js"]
    }
  ],
  "background": {
    "scripts": ["background/init.js"]
  },
  "description": "Redacts timestamps on GitHub",
  "homepage_url": "https://github.com/vogellacompany",
  "manifest_version": 2,
  "name": "GitHub Timestamp Redaction",
  "icons": {
    "16": "icons/dwarf_walking_orange.svg",
    "32": "icons/dwarf_walking_orange.svg",
    "48": "icons/dwarf_walking_orange.svg",
    "96": "icons/dwarf_walking_orange.svg",
    "128": "icons/dwarf_walking_orange.svg"
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_icon": "icons/dwarf_walking_orange.svg",
    "theme_icons": [{
      "light": "icons/dwarf_walking_orange.svg",
      "dark": "icons/dwarf_walking_orange.svg",
      "size": 32
    }],
    "default_title": "Redact",
    "default_popup": "popup/popup.html"
  },
  "version": "0.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "github-redact-timestamp@vogella.com",
      "strict_min_version": "79.0"
    }
  }
}
